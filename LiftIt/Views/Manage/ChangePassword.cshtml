@model ChangePasswordViewModel
@{
    ViewData["Title"] = "Change password";
    ViewData.AddActivePage(ManageNavPages.ChangePassword);
    Layout = "~/Views/Shared/_Layout3.cshtml";
}

<link href="~/font-awesome/css/font-awesome.min.css" rel="stylesheet" />
<link href="~/css/Index/animate.min.css" rel="stylesheet" />
<link href="~/css/Index/index.css" rel="stylesheet" />
<link href="~/css/Index/circleProgress.css" rel="stylesheet" />


@Html.Partial("_StatusMessage", Model.StatusMessage)
<div class="row">
    <div class="col-md-6">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="OldPassword"><font color="#fff">Aktualne hasło</font></label>
                <input asp-for="OldPassword" class="form-control" />
                <span asp-validation-for="OldPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NewPassword"><font color="#fff">Nowe hasło</font></label>
                <input asp-for="NewPassword" class="form-control" />
                <span asp-validation-for="NewPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ConfirmPassword"><font color="#fff">Potwierdź nowe hasło</font></label>
                <input asp-for="ConfirmPassword" class="form-control" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-default">Ustaw nowe hasło</button>
        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
